<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/faves_back_film"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/image_faves_film"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:src="@drawable/logimage"
        android:layout_marginStart="15dp"

        />

    <TextView
        android:id="@+id/title_faves_film"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lobster_regular"
        android:layout_toRightOf="@+id/image_faves_film"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:text="visualize"
        android:textAlignment="center"
        android:textColor="#AA0C0C"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/desc_faves_film"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/title_faves_film"
        android:layout_toRightOf="@id/image_faves_film"
        android:layout_marginTop="20dp"
        android:layout_alignBottom="@+id/image_faves_film"
        android:text="visualize visualize visualize visualize visualize visualize visualize"
        android:textAlignment="center"
        android:padding="10dp"
        android:textColor="#ffff"
        android:textStyle="italic"
        />

</RelativeLayout>