<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_person_item"
    android:padding="5dp"
    android:layout_marginBottom="3dp"
    >

    <TextView
        android:id="@+id/title_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="visualize"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_post"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="user and group visualize "
        />

    <TextView
        android:id="@+id/content_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_post"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="content visualize"
        android:textStyle="italic" />
    

</RelativeLayout>